   b=$80
  ELSE
   b=bytes
  FI
  err=Sio (drivenum,$52,$40,$7,buff,b,u)
  StrC (u,txt)
  Write (35,12,txt)
  ErrMess (err)
 UNTIL u=maxsec OR ch=28
 OD

 Pause (200)
 ch=$FF
 Write (18,12,"                      ")

RETURN

