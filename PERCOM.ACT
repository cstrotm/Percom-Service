PROC Fill_Mask ()

 CARD c

 Mask ()

 Position (13,2)
 PrintB (drivenum)

 Position (13,3)
 PrintC (maxsec)

 Position (30,3)
 c=$400/bytes
 PrintC (maxsec/c)

 Position (14,5)
 PrintB (percom(0))

 Position (35,5)
 PrintB (percom(1))

 Position (14,6)
 c=percom(2)*$100+percom(3)
 PrintC (c)

 Position (35,6)
 IF percom(4)=1 THEN
  Print ("Ja  ")
 ELSE
  Print ("Nein")
 FI

 Position (14,7)
 IF percom(5)=0 THEN
  Print ("FM ")
 FI
 IF percom(5)=4 THEN
  Print ("MFM")
 FI

 Position (35,7)
 c=percom(6)*$100+percom(7)
 PrintC (c)

 Position (18,8)
 IF percom(8)=$FF THEN
  Print ("Normal")
 FI
 IF percom(8)=$40 THEN
  Print ("HD    ")
 FI

RETURN

