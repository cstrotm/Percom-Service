PROC HSIO_Get ()
 err=Sio (drivenum,$68,$40,1,buff,2,0)
 IF err=1 THEN
  hsiosz=buff(1)*$100+buff(0)
  err=Sio (drivenum,$69,$40,5,hsioadr,hsiosz,hsioadr)
  hsio_ok=err
 FI
RETURN

;

PROC MvBlock (BYTE POINTER dst,src, BYTE len)
 DO
  len==-1
  IF len<>1 THEN
   dst(len)=src(len)
  FI
 UNTIL len=0
 OD
RETURN

