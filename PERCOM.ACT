PROC Put_LBA ()

 BYTE ch=$2FC
 CARD u,b
 Zero (buff,256)

 Write (18,11,"Schreibe Sektor :")

 u=0
 DO
  u==+1
  IF u<4 THEN
   b=$80
  ELSE
   b=bytes
  FI
  buff(0)=u mod 256
  buff(1)=u/256
  err=Sio (drivenum,$50,$80,$7,buff,b,u)
  StrC (u,txt)
  Write (35,11,txt)
  ErrMess (err)
 UNTIL u=maxsec OR ch=28
 OD

 Pause (200)
 ch=$FF
 Write (18,11,"                      ")

RETURN

; --

PROC Chk_LBA ()

 BYTE ch=$2FC
 CARD u,b
 Zero (buff,256)

 Write (18,11,"Vergleiche Daten:")

 u=0
 DO
  u==+1
  IF u<4 THEN
   b=$80
  ELSE
   b=bytes
  FI
  buff(0)=u mod 256
  buff(1)=u/256
  err=Sio (drivenum,$52,$40,$7,buff,b,u)
  StrC (u,txt)
  IF buff(0)<>u mod 256 OR buff(1)<>u/256 THEN
   Write (18,11,"Vergleichsfehler:")
   Write (35,11,txt)
   Pause (255)
   Write (18,11,"Vergleiche Daten:")
  FI
  Write (35,11,txt)
  ErrMess (err)

 UNTIL u=maxsec OR ch=28
 OD

 Pause (200)
 ch=$FF
 Write (18,11,"                      ")

RETURN

