PROC Read_Percom ()
 err=Sio (drivenum,$4D,$00,5,buff,0,$FF03)
 Pause (255)
 err=Sio (drivenum,$52,$00,7,buff,0,4)
 Pause (255)
 err=Sio (drivenum,$4E,$40,7,percom,12,0)
 ErrMess (err)
 DiskSize ()
 p_read=err
RETURN

; --

PROC Write_Percom ()
 err=Sio (drivenum,$4F,$80,7,percom,12,0)
 ErrMess (err)
RETURN

